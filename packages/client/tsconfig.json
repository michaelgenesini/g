{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": [
      "esnext"
    ],
    "listEmittedFiles": false,
    "module": "esnext",
    "noEmit": false,
    "outDir": "./lib",
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": [
      "@types"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "target": "es2017",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "./lib",
    "**/__tests__"
  ],
  "typedocOptions": {
    "exclude": "**/__tests__",
    "excludeNotExported": true
  }
}
