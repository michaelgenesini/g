{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "lib": ["esnext"],
    "listEmittedFiles": false,
    "module": "commonjs",
    "noEmit": false,
    "outDir": "./lib",
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": ["@types"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "es2017",
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules", "./lib", "**/__tests__"],
  "typedocOptions": {
    "exclude": "**/__tests__",
    "excludeNotExported": true
  }
}
